<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.sharksystem.sharkfw_android">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name="net.sharksystem.android.protocols.location.LocationService"
            android:enabled="true" />

        <receiver android:name="net.sharksystem.android.protocols.location.LocationReceiver" >

            <!-- this Broadcast Receiver only listens to the following intent -->
            <intent-filter>
                <action android:name="net.sharksystem.android.ACTION_REFRESH_SCHEDULE_ALARM" />
            </intent-filter>
        </receiver>

    </application>

</manifest>